<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context="co.deucate.smsbomber.HomeActivity"
    tools:layout_editor_absoluteY="81dp">

    <com.google.android.gms.ads.AdView
        android:id="@+id/mainTopBannerAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_bottom_ad_unit_1" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/mainTopBannerAd"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/mainPhoneEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/green"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textColor="@color/green"
            android:textColorHint="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <Button
                android:id="@+id/mainOkBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/round_bg"
                android:text="@string/start"
                android:textColor="@color/green" />

            <Button
                android:id="@+id/contactBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/round_bg"
                android:text="@string/contacts"
                android:textColor="@color/green" />

        </LinearLayout>


        <TextView
            android:id="@+id/mainStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="STATUS"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/simply_close_the_app_if_you_want_to_stop_the_bombing"
            android:textAlignment="center"
            android:textColor="@color/red" />

    </LinearLayout>

    <TextView
        android:id="@+id/logTV"
        android:maxLines="3213"
        android:padding="16dp"
        android:textColor="@color/green"
        android:text="@string/hack_started"
        android:layout_width="match_parent"
        android:layout_height="297dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:scrollbars="vertical" />


    <com.google.android.gms.ads.AdView
        android:layout_alignParentBottom="true"
        android:id="@+id/mainBottomBannerAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_bottom_ad_unit" />

</RelativeLayout>
